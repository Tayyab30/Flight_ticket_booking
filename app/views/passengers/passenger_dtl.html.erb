<div class="container">
<div class="row">
    <div class="col mt-5"><h1 class="text-center">Passengers Detail</h1></div>
</div>

<table class="table table-dark table-hover mt-5">
<thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
         

            
        </tr>
    </thead>
    <tbody>
        <% @passengers.each  do |p| %>
            <tr>
                <td><%= p.first_name %></td>
                <td><%= p.last_name %></td>
                <td><%= p.email %></td>
                <td><%= p.phone_number %></td>
                <td><%= p.address %></td>

            </tr>
        <% end %>
    </tbody>
</table>
</div>

